<div class="container">
  <h1><%= @list.name %></h1>

  <ul class="list-group">
    <% @list.bookmarks.each do |bookmark| %>
      <li class="list-group-item"><strong><%= bookmark.movie.title %></strong><br><%= bookmark.comment %></li>
    <% end %>
  </ul>

  <%= link_to "Add new bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  <%= link_to "Return to main page", lists_path, class: "btn btn-primary" %>
</div>
