<div class="container">
  <h1><%= @list.name %></h1>

  <ul class="list-group">
    <% @list.bookmarks.each do |bookmark| %>
      <li class="list-group-item">
        <strong><%= bookmark.movie.title %></strong><br>
        <%= bookmark.comment %><br>
        <%= link_to "Delete this bookmark", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
    <% end %>
  </ul>
  <br>
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
</div>
