<div class="container">
  <h1>My Lists</h1>

<div class="cards">
    <% @lists.each do |list| %>
      <% if list.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 180, crop: :fill %>')">
          <%= link_to list.name, list_path(list) %>
        </div>
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('app/assets/images/default.jpg')">
          <%= link_to list.name, list_path(list) %>
        </div>
      <% end %>
    <% end %>
</div>




</div>
